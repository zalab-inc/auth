model User {
    id         String   @id @default(cuid())
    email      String   @unique
    password   String
    isVerified Boolean  @default(false)
    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    Profile    Profile?

    @@index([email])
    @@map("users")
}

model Profile {
    id        String   @id @default(cuid())
    userId    String   @unique
    fullName  String
    user      User     @relation(fields: [userId], references: [id])
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([userId])
    @@index([fullName])
    @@map("profiles")
}
